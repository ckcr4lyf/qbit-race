{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "./build/",
	"moduleResolution": "node",
        "sourceMap": true,
        // "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
